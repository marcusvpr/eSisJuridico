<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="MpProtestoPU">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:~/db/mpProtesto/mpProtestoDB" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />

			<!-- property name="javax.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:58001/MP_PROTESTO" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="Maker@1" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> -->

			<!-- property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/mp_protesto" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="Mpxds" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /> -->

			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<!-- property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" /> -->
			<!-- property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" /> -->
			
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			
			<property name="hibernate.enable_lazy_load_no_trans" value="true" />
			
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.idle_test_period" value="300" />
			<property name="hibernate.c3p0.max_statements" value="50" />
			<property name="hibernate.c3p0.timeout" value="300" />

			<!-- SCHEMA DATABASE -->
			<!-- property name="hibernate.multiTenancy" value="DISCRIMINATOR" /> 
			<property name="hibernate.multi_tenant_connection_provider"
			 					value="com.mpxds.mpbasic.util.jpa.MpMultiTenantProvider" />  -->
			 					
        	<!-- Configuração do Hibernate Envers -->
        	<property name="post-insert"
value="org.hibernate.ejb.event.EJB3PostInsertEventListener, org.hibernate.envers.event.EnversListener" />
        	<property name="post-update" 
value="org.hibernate.ejb.event.EJB3PostUpdateEventListener, org.hibernate.envers.event.EnversListener" />

		</properties>
	</persistence-unit>

</persistence>
